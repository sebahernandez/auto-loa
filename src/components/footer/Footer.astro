---
// Footer component data
const menuLinks = [
    { name: "Inicio", href: "/" },
    { name: "Nosotros", href: "/about" },
    { name: "Catálogo", href: "/catalogo" },
    { name: "Contacto", href: "/contact" }
];

const socialLinks = [
    { 
        name: "Facebook", 
        href: "#", 
        icon: "fab fa-facebook-f" 
    },
    { 
        name: "Instagram", 
        href: "#", 
        icon: "fab fa-instagram" 
    }
];

const contactInfo = [
    {
        type: "Dirección",
        value: "Av. Principal 123, Santiago, Chile",
        icon: "fas fa-map-marker-alt"
    },
    {
        type: "Teléfono",
        value: "+56 9 1234 5678",
        icon: "fas fa-phone"
    },
    {
        type: "Correo",
        value: "contacto@autoloa.cl",
        icon: "fas fa-envelope"
    }
];
---

<footer class="bg-[#020617] text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Main Footer Content -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            
            <!-- Primera Columna: Logo y Redes Sociales -->
            <div class="space-y-6">
                <!-- Logo -->
                <div class="flex items-center space-x-2">
                      <img class="h-8 w-auto" src="/logo.webp" alt="auto loa - automotora">
                        <span class="ml-2 text-xl font-bold text-white">Auto Loa</span>
                </div>
                
                <!-- Redes Sociales -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Síguenos</h3>
                    <div class="flex space-x-4">
                        {socialLinks.map((social) => (
                            <a 
                                href={social.href} 
                                class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-blue-600 transition-colors duration-200"
                                aria-label={social.name}
                            >
                                <i class={`${social.icon} text-sm text-white`}></i>
                            </a>
                        ))}
                    </div>
                </div>
            </div>

            <!-- Segunda Columna: Enlaces del Menú -->
            <div>
                <h3 class="text-lg font-semibold mb-6">Navegación</h3>
                <ul class="space-y-3">
                    {menuLinks.map((link) => (
                        <li>
                            <a 
                                href={link.href} 
                                class="text-gray-400 hover:text-white transition-colors duration-200 flex items-center"
                            >
                                <i class="fas fa-chevron-right text-xs mr-2"></i>
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            <!-- Tercera Columna: Información de Contacto -->
            <div>
                <h3 class="text-lg font-semibold mb-6">Contacto</h3>
                <div class="space-y-4">
                    {contactInfo.map((contact) => (
                        <div class="flex items-start space-x-3">
                            <div class="flex-shrink-0">
                                <i class={`${contact.icon} text-blue-500 mt-1`}></i>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-300">{contact.type}</p>
                                <p class="text-gray-400">{contact.value}</p>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </div>

        <!-- Divisor -->
        <div class="border-t border-gray-800 mt-12 pt-6">
            <!-- Columna de ancho completo -->
            <div class="text-center">
                <p class="text-gray-400 text-sm">
                    © 2025 AutoLoa. Todos los derechos reservados.
                </p>
                <p class="text-gray-500 text-xs mt-2">
                    Diseño y desarrollo 
                    <a href="https://venpu.cl" target="_blank" class="text-blue-400 hover:text-blue-300 transition-colors duration-200 font-medium">
                        Venpu
                    </a>
                </p>
            </div>
        </div>
    </div>
</footer>
