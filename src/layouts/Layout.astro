---
import Footer from '../components/footer/Footer.astro';
import Navbar from '../components/navbar/Navbar.astro';
import Whatsapp from '../components/whatsapp-button/Whatsapp.astro';
import '../styles/global.css';

export interface Props {
	title?: string;
	description?: string;
	image?: string; // Optional image for Open Graph
}

const { title, description, image } = Astro.props;

// Extraer solo el nombre del archivo de la URL completa
const getImageFilename = (imageUrl: string) => {
	// Si la imagen está vacía o undefined, usar la imagen por defecto
	if (!imageUrl || imageUrl.trim() === '') {
		return "/frontis-autoloa.webp";
	}
	
	if (imageUrl.includes('digitaloceanspaces.com')) {
		// Extraer solo el nombre del archivo de la URL completa
		const parts = imageUrl.split('/');
		return parts[parts.length - 1];
	}
	// Si no es una URL de DigitalOcean, usar la imagen tal como viene
	return imageUrl;
};

const imageFilename = getImageFilename(image || "/frontis-autoloa.webp");

console.log(`Original image URL: ${image}`);
console.log(`Extracted filename: ${imageFilename}`);
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta property="og:image" content={`https://www.autoloa.cl/api/og/${imageFilename}`} />
		<meta property="og:image:width" content="1200">
		<meta property="og:image:height" content="630">
		<meta property="og:image:type" content="image/jpeg">
		<title>{title}</title>
		<!-- Font Awesome CDN -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	</head>
	<body>
		<Navbar />
		<slot />
		<Whatsapp />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
