<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    let currentImageIndex = 0;
    let autoplayInterval;
    let isAutoplayActive = true;
    const autoplayDelay = 3000; // 3 segundos
    
    const mainImage = document.getElementById('main-image');
    const thumbnails = document.querySelectorAll('.thumbnail-btn');
    const indicatorDots = document.querySelectorAll('.indicator-dot');
    const currentIndexSpan = document.getElementById('current-index');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    const autoplayBtn = document.getElementById('autoplay-btn');
    const playIcon = document.getElementById('play-icon');
    const pauseIcon = document.getElementById('pause-icon');
    const scrollUpBtn = document.getElementById('scroll-up-btn');
    const scrollDownBtn = document.getElementById('scroll-down-btn');
    const thumbnailsContainer = document.getElementById('thumbnails-container');
    
    const totalImages = thumbnails.length;
    
    // Funci√≥n para scroll en thumbnails
    function scrollThumbnails(direction) {
      if (!thumbnailsContainer) return;
      
      const scrollAmount = 80; // Altura de thumbnail + gap
      const currentScrollTop = thumbnailsContainer.scrollTop;
      
      if (direction === 'up') {
        thumbnailsContainer.scrollTo({
          top: Math.max(0, currentScrollTop - scrollAmount),
          behavior: 'smooth'
        });
      } else if (direction === 'down') {
        thumbnailsContainer.scrollTo({
          top: currentScrollTop + scrollAmount,
          behavior: 'smooth'
        });
      }
    }
    
    // Funci√≥n para asegurar que el thumbnail activo est√© visible
    function scrollToActiveThumbnail(index) {
      if (!thumbnailsContainer || !thumbnails[index]) return;
      
      const thumbnail = thumbnails[index];
      const containerRect = thumbnailsContainer.getBoundingClientRect();
      const thumbnailRect = thumbnail.getBoundingClientRect();
      
      // Verificar si el thumbnail est√° fuera del √°rea visible
      if (thumbnailRect.top < containerRect.top) {
        // Scroll hacia arriba
        thumbnailsContainer.scrollTo({
          top: thumbnail.offsetTop - 10,
          behavior: 'smooth'
        });
      } else if (thumbnailRect.bottom > containerRect.bottom) {
        // Scroll hacia abajo
        thumbnailsContainer.scrollTo({
          top: thumbnail.offsetTop - thumbnailsContainer.clientHeight + thumbnail.clientHeight + 10,
          behavior: 'smooth'
        });
      }
    }
    
    // Funci√≥n para cambiar la imagen principal
    function changeMainImage(imageSrc, index) {
      if (!mainImage || index < 0 || index >= totalImages) return;
      
      currentImageIndex = index;
      
      // Cambiar la imagen principal con fade effect
      mainImage.style.opacity = '0.5';
      setTimeout(() => {
        mainImage.src = imageSrc;
        mainImage.style.opacity = '1';
      }, 150);
      
      // Actualizar thumbnails
      thumbnails.forEach((thumbnail, i) => {
        const isActive = i === index;
        thumbnail.classList.remove('border-blue-500', 'ring-2', 'ring-blue-200', 'border-gray-200', 'hover:border-blue-300');
        if (isActive) {
          thumbnail.classList.add('border-blue-500', 'ring-2', 'ring-blue-200');
        } else {
          thumbnail.classList.add('border-gray-200', 'hover:border-blue-300');
        }
      });
      
      // Actualizar indicadores
      indicatorDots.forEach((dot, i) => {
        dot.classList.remove('bg-white', 'bg-white', 'bg-opacity-50');
        if (i === index) {
          dot.classList.add('bg-white');
        } else {
          dot.classList.add('bg-white', 'bg-opacity-50');
        }
      });
      
      // Actualizar contador
      if (currentIndexSpan) {
        currentIndexSpan.textContent = index + 1;
      }
      
      // Asegurar que el thumbnail activo est√© visible
      scrollToActiveThumbnail(index);
    }
    
    // Funci√≥n para ir a la siguiente imagen
    function nextImage() {
      const nextIndex = (currentImageIndex + 1) % totalImages;
      const nextImageSrc = thumbnails[nextIndex]?.getAttribute('data-image-src');
      if (nextImageSrc) {
        changeMainImage(nextImageSrc, nextIndex);
      }
    }
    
    // Funci√≥n para ir a la imagen anterior
    function prevImage() {
      const prevIndex = (currentImageIndex - 1 + totalImages) % totalImages;
      const prevImageSrc = thumbnails[prevIndex]?.getAttribute('data-image-src');
      if (prevImageSrc) {
        changeMainImage(prevImageSrc, prevIndex);
      }
    }
    
    // Funci√≥n para iniciar autoplay
    function startAutoplay() {
      if (totalImages <= 1) return;
      autoplayInterval = setInterval(nextImage, autoplayDelay);
      isAutoplayActive = true;
      if (playIcon && pauseIcon) {
        playIcon.classList.add('hidden');
        pauseIcon.classList.remove('hidden');
      }
    }
    
    // Funci√≥n para pausar autoplay
    function pauseAutoplay() {
      clearInterval(autoplayInterval);
      isAutoplayActive = false;
      if (playIcon && pauseIcon) {
        pauseIcon.classList.add('hidden');
        playIcon.classList.remove('hidden');
      }
    }
    
    // Funci√≥n para toggle autoplay
    function toggleAutoplay() {
      if (isAutoplayActive) {
        pauseAutoplay();
      } else {
        startAutoplay();
      }
    }
    
    // Event listeners para thumbnails
    thumbnails.forEach((thumbnail, index) => {
      thumbnail.addEventListener('click', function() {
        const imageSrc = this.getAttribute('data-image-src');
        if (imageSrc) {
          pauseAutoplay();
          changeMainImage(imageSrc, index);
          setTimeout(startAutoplay, 2000);
        }
      });
    });
    
    // Event listeners para indicadores
    indicatorDots.forEach((dot, index) => {
      dot.addEventListener('click', function() {
        const imageSrc = thumbnails[index]?.getAttribute('data-image-src');
        if (imageSrc) {
          pauseAutoplay();
          changeMainImage(imageSrc, index);
          setTimeout(startAutoplay, 2000);
        }
      });
    });
    
    // Event listeners para botones de navegaci√≥n
    if (prevBtn) {
      prevBtn.addEventListener('click', function() {
        pauseAutoplay();
        prevImage();
        setTimeout(startAutoplay, 2000);
      });
    }
    
    if (nextBtn) {
      nextBtn.addEventListener('click', function() {
        pauseAutoplay();
        nextImage();
        setTimeout(startAutoplay, 2000);
      });
    }
    
    // Event listeners para scroll de thumbnails
    if (scrollUpBtn) {
      scrollUpBtn.addEventListener('click', () => scrollThumbnails('up'));
    }
    
    if (scrollDownBtn) {
      scrollDownBtn.addEventListener('click', () => scrollThumbnails('down'));
    }
    
    // Event listener para bot√≥n de autoplay
    if (autoplayBtn) {
      autoplayBtn.addEventListener('click', toggleAutoplay);
    }
    
    // Scroll con rueda del mouse en thumbnails
    if (thumbnailsContainer) {
      thumbnailsContainer.addEventListener('wheel', function(e) {
        e.preventDefault();
        const delta = e.deltaY > 0 ? 'down' : 'up';
        scrollThumbnails(delta);
      });
    }
    
    // Navegaci√≥n con teclado
    document.addEventListener('keydown', function(e) {
      if (!mainImage) return;
      
      switch(e.key) {
        case 'ArrowLeft':
          e.preventDefault();
          pauseAutoplay();
          prevImage();
          setTimeout(startAutoplay, 2000);
          break;
        case 'ArrowRight':
          e.preventDefault();
          pauseAutoplay();
          nextImage();
          setTimeout(startAutoplay, 2000);
          break;
        case 'ArrowUp':
          e.preventDefault();
          scrollThumbnails('up');
          break;
        case 'ArrowDown':
          e.preventDefault();
          scrollThumbnails('down');
          break;
        case ' ':
          e.preventDefault();
          toggleAutoplay();
          break;
        case 'Escape':
          pauseAutoplay();
          break;
      }
    });
    
    // Pausar autoplay cuando la ventana no est√° en foco
    document.addEventListener('visibilitychange', function() {
      if (document.hidden) {
        pauseAutoplay();
      } else if (isAutoplayActive) {
        startAutoplay();
      }
    });
    
    // Pausar autoplay al hacer hover sobre la imagen
    if (mainImage) {
      const imageContainer = mainImage.parentElement;
      imageContainer.addEventListener('mouseenter', pauseAutoplay);
      imageContainer.addEventListener('mouseleave', () => {
        if (isAutoplayActive) startAutoplay();
      });
    }
    
    // Iniciar autoplay si hay m√°s de una imagen
    if (totalImages > 1) {
      startAutoplay();
    }
    
    // Funcionalidad de zoom para la imagen principal
    if (mainImage) {
      mainImage.addEventListener('click', function() {
        pauseAutoplay();
        
        // Crear modal de zoom
        const modal = document.createElement('div');
        modal.className = 'fixed inset-0 bg-black bg-opacity-90 flex items-center justify-center z-50 p-4 cursor-pointer';
        
        const zoomedImage = document.createElement('img');
        zoomedImage.src = this.src;
        zoomedImage.className = 'max-w-full max-h-full object-contain cursor-default transition-transform duration-300';
        zoomedImage.onclick = (e) => e.stopPropagation();
        
        const closeButton = document.createElement('button');
        closeButton.innerHTML = '‚úï';
        closeButton.className = 'absolute top-4 right-4 text-white text-3xl font-bold bg-black bg-opacity-50 rounded-full w-12 h-12 flex items-center justify-center hover:bg-opacity-75 transition-all';
        
        const imageInfo = document.createElement('div');
        imageInfo.className = 'absolute bottom-4 left-1/2 transform -translate-x-1/2 text-white text-center';
        imageInfo.innerHTML = `<p class="text-lg font-semibold">${mainImage.alt}</p><p class="text-sm opacity-75">Imagen ${currentImageIndex + 1} de ${totalImages}</p>`;
        
        // Cerrar modal
        const closeModal = () => {
          if (document.body.contains(modal)) {
            document.body.removeChild(modal);
